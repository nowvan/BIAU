	<script language="javascript">
		function Check()  // 验证表单数据有效性
		{
			
			if (document.send.password.value!= document.send.confirm.value)
			{
				alert('密碼不一致!');
				return false;
			}

			return true;
		}
	</script>

</head>
<body data-spy="scroll">
	<header>
		<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/"><img width="250px" height="100px" src="/images/biau.png" alt="company logo" /></a>
				</div>
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav navbar-right custom-menu">
						<li class="active"><a href="/">Home</a></li>
						<% if (companyname && authenticated) {%>
						<li><a href="#"><%= companyname%>-<%= username %></a></li>
						<li><a href="/users/manage">Manage</a></li>
						<li><a href="/users/add_file">Add File</a></li>						
						<li><a href="/users/signout">Sign Out</a></li>
						<% }else{ %>
						<li><a href="/users/signin">Log In</a></li>
