						<% } %>		
					</ul>
				</div>
			</div>
		</nav>
		
	</header>


	<section id="contact">
			<div class="container"> 
				<div class="row">
					<div class="col-md-12">
						<div class="col-lg-12">
							<!-- <div class="text-center color-elements">
							<h2>Register</h2>
							</div> -->
						</div>
					
						<div class="col-lg-6 col-md-8">
							
								<div class="row">
									
									<br><br><br><br>
									<h2><%= companyname%>.檔案</h2>
									<div class="col-sm-12 height-contact-element">
										<ul class="list-group">
											<% for(var i = files.length-1 ; i>=0; i--){ %>
											<li ><%- fileurl[i] %> <%= files[i].CreateDate %>
												<a href='/apis/delete/<%= files[i].id %>' style='float:right;margin-right:15px;'> Delete</a>
												<hr>
													<!--	<a href='/users/modify/<%= files[i].id %>' style='float:right;margin-right:20px;'> Modify</a> -->
											</li>
													<% } %>	
										</ul>
									</div>
									
									
								</div>
							
						</div>
						<div class="col-lg-5 col-md-3 col-lg-offset-1 col-md-offset-1">
							<br><br><br><br>
							<h2>Restore</h2>
							<ul class="list-group">
								<% for(var i = dfiles.length-1 ; i>=0; i--){ %>
								<li ><%- dfileurl[i] %> <%= dfiles[i].CreateDate %>
									<a href='/apis/restore/<%= dfiles[i].id %>' style='float:right;margin-right:15px;'> Restore</a>
									<hr>
										<!--	<a href='/users/modify/<%= dfiles[i].id %>' style='float:right;margin-right:20px;'> Modify</a> -->

								</li>
										<% } %>	
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>
	</body>
